<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIApp2.MainPage">

    <ScrollView>
        <HorizontalStackLayout Spacing="10">
            
            <VerticalStackLayout>
                <ImageButton Source = "expectation1_img.png"
                             x:Name="imageButton1"
                             HeightRequest="150"
                             WidthRequest="150"
                             Clicked="OnFirstImageClicked"/>
                <Label Text="college life..." />
            </VerticalStackLayout>

           
            <VerticalStackLayout>
                <ImageButton Source ="expectation2_img.png" 
                             x:Name=" imageButton2"
                             HeightRequest="150"
                             WidthRequest="150"
                             Clicked="OnSecondImageClicked"/>
                <Label Text="when the winds blows in my hair" />
            </VerticalStackLayout>
            
        </HorizontalStackLayout>
    </ScrollView>


</ContentPage>
